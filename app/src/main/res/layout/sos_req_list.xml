<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="130dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/idSOSReqListCV"
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:radius="16dp"
        app:cardBackgroundColor="@color/sandal"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idReqName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="Name :"
            android:textColor="@color/black"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idReqDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:text="Date Sent :"
            android:textColor="@color/black"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idReqLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="75dp"
            android:text="Location :"
            android:textColor="@color/black"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idReqNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="15dp"
            android:text="ABC"
            android:textColor="@color/black"
            android:textSize="17dp">

        </androidx.appcompat.widget.AppCompatTextView>

       <androidx.appcompat.widget.AppCompatTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="110dp"
           android:layout_marginTop="45dp"
           android:text="12/12/2022"
           android:textColor="@color/black"
           android:textSize="17dp">

       </androidx.appcompat.widget.AppCompatTextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/idViewCV"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginTop="75dp"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="@color/hex"
            android:layout_marginLeft="110dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idViewTV"
                android:layout_gravity="center"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="15dp">

            </androidx.appcompat.widget.AppCompatTextView>

        </androidx.cardview.widget.CardView>

<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/idSOSReqInfoIV"
    android:src="@mipmap/info"
    android:layout_marginLeft="260dp"
    android:layout_marginTop="37dp">

</androidx.appcompat.widget.AppCompatImageView>

    </androidx.cardview.widget.CardView>

</LinearLayout>