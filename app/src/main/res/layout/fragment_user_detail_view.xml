<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightsandal"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/lightsandal"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/id_profile_back_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/backarrow"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="35dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User details"
                        android:textColor="@color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp" />



                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/id_booking_back_arrow"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/profile" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/id_profile_account_info"
            android:layout_width="202dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Account Info"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.248"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="52dp"
            android:text="Review"
            android:textColor="@color/hex"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/id_profile_account_info"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toEndOf="@+id/id_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_account_info" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idProfileNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Mark"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toEndOf="@+id/id_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_name" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_image"
            android:layout_width="51dp"
            android:layout_height="35dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/profilename"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_account_info" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_mobile"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_image" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_profile_mobile_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Mobile"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toEndOf="@+id/id_profile_mobile"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idProfileMobileTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="9876543210"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toEndOf="@+id/id_profile_mobile"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_mobile_number" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_email"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_mobile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_profile_email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Email"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toEndOf="@+id/id_profile_email"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_mobile_number" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idProfileEmailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="markexa123@gmail.com"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.365"
            app:layout_constraintStart_toEndOf="@+id/id_profile_email"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_email_id" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_address"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_profile_address_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toEndOf="@+id/id_profile_address"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_email_id" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idProfileAddressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Chennai"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.173"
            app:layout_constraintStart_toEndOf="@+id/id_profile_address"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_address_id" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_dob"
            android:layout_width="46dp"
            android:layout_height="35dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/dob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_address" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_profile_dob_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="D.O.B"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.127"
            app:layout_constraintStart_toEndOf="@+id/id_profile_dob"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_address_id" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idProfileDOBTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="12-12-1999"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toEndOf="@+id/id_profile_dob"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_dob_id" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_profile_logout"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/roundstyle4"
            android:text="Remove User"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_dob_id"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

