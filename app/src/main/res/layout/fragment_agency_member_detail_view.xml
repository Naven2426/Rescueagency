<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightsandal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/sandal">


            <ImageView
                android:id="@+id/id_agency_member_detail_view_back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/backarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agency_add_member_details_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Member Details"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.179"
                app:layout_constraintStart_toEndOf="@+id/id_agency_member_detail_view_back_button"
                tools:layout_editor_absoluteY="46dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_add_member_view_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:src="@mipmap/profilename"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agency_add_member_details_view_title">

            </androidx.appcompat.widget.AppCompatImageView>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/id_agency_profile_view_edit_update_button"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:layout_below="@+id/id_agency_add_member_view_profile_image"
                android:layout_alignParentStart="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/roundstyle2"
                android:text="Update Profile"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agency_add_member_view_profile_image" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_image_view"
                android:layout_width="51dp"
                android:layout_height="49dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="36dp"
                android:src="@mipmap/profilename"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_image_view"
                tools:layout_editor_absoluteY="7dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_mobile_view"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/mobile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_image_view" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_mobile_number_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="9876543210"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.231"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_mobile_view"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_name_view" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_email_view"
                android:layout_width="46dp"
                android:layout_height="53dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/email"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_mobile_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_email_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="markexa123@gmail.com"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.59"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_email_view"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_mobile_number_view" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_address_view"
                android:layout_width="46dp"
                android:layout_height="53dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_email_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_address_id_view"
                android:layout_width="95dp"
                android:layout_height="32dp"
                android:layout_marginTop="36dp"
                android:text="Chennai"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.228"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_address_view"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_email_id_view" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_dob_view"
                android:layout_width="46dp"
                android:layout_height="53dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/dob"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_address_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_dob_id_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="12-12-1999"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.242"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_dob_view"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_address_id_view" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_roll_view"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/roll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_dob_view" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_roll_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="Helper"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_roll_view"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_dob_id_view" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_eof_view"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/yoe"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_roll_view" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_eof_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="20 Years of Experience"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.463"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_roll_view"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_roll_type_view" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_agency_add_member_view_next_button"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:background="@drawable/roundstyle4"
            android:text="Remove Member"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            />



    </LinearLayout>
</androidx.core.widget.NestedScrollView>
