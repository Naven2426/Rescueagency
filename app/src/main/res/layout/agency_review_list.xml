<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="179dp"
    android:layout_marginTop="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/idAdminAgencyListCV"
        android:layout_width="384dp"
        android:layout_height="172dp"
        android:radius="16dp"
        app:cardBackgroundColor="@color/sandal"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/idAdminAgencyProfile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/profilename">

        </androidx.appcompat.widget.AppCompatImageView>




        <TextView
            android:id="@+id/idAgencyUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="13dp"
            android:text="Mark876"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp">

        </TextView>

        <TextView
            android:id="@+id/idAgencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="45dp"
            android:text="A.C. Ambulance Service"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp">

        </TextView>


        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/idAdminAgencyRatingCV"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idAdminAgencyRatingNum"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:layout_marginLeft="4dp">

                </androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idAdminAgencyRatingStar"
                    android:background="@mipmap/rating_star">

                </androidx.appcompat.widget.AppCompatImageView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idAgencyReviewText"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="15dp"
            android:text="Prompt response and professional service!
The team at A.C. Ambulance Service arrived
quickly when we needed them, and their
paramedics were efficient and caring.
Definitely deserving of a 4.5-star rating."
            android:textSize="15dp"
            android:textColor="@color/black">

        </androidx.appcompat.widget.AppCompatTextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>