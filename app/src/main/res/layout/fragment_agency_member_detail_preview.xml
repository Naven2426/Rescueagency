<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightsandal"
    tools:context=".LoginActivityFragments.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="199dp">


            <ImageView
                android:id="@+id/id_agency_member_detail_back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/backarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agency_add_member_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Member Details"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.179"
                app:layout_constraintStart_toEndOf="@+id/id_agency_member_detail_back_button"
                tools:layout_editor_absoluteY="46dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_add_member_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:src="@mipmap/profilename"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agency_add_member_details">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_agent_profile_image"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/profilename"
            app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_image"
                tools:layout_editor_absoluteY="7dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_agent_profile_mobile"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_image" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="9876543210"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.231"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_mobile"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_name" />

            <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_agent_profile_email"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_mobile" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_email_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="markexa123@gmail.com"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.59"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_email"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_mobile_number" />

            <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_agent_profile_address"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_email" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_address_id"
                android:layout_width="95dp"
                android:layout_height="32dp"
                android:layout_marginTop="36dp"
                android:text="Chennai"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.228"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_address"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_email_id" />

            <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_agent_profile_dob"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_address" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_dob_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:text="12-12-1999"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.242"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_dob"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_address_id" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_roll"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/roll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_dob" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_roll_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="Helper"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.18"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_roll"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_dob_id" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agent_profile_eof"
                android:layout_width="55dp"
                android:layout_height="59dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/yoe"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_roll" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agent_profile_eof_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:text="20 Years of Experience"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.463"
                app:layout_constraintStart_toEndOf="@+id/id_agent_profile_roll"
                app:layout_constraintTop_toBottomOf="@+id/id_agent_profile_roll_type" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_agency_add_member_next_button"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:background="@drawable/roundstyle"
            android:text="Add Member"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            />



    </LinearLayout>
</androidx.core.widget.NestedScrollView>
