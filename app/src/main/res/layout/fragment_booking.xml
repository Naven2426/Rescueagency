<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightsandal"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:cardBackgroundColor="@color/sandal"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/id_booking_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="56dp"
                android:src="@mipmap/backarrow" />

            <TextView
                android:id="@+id/new_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Request"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFO"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_below="@id/new_request"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rescue Team"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="30dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/id_request_choose_team_button"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/roundstyle"
        android:text="Choose Rescue Agency"
        android:textColor="@color/white"
        >
    </androidx.appcompat.widget.AppCompatButton>


        <androidx.cardview.widget.CardView
            android:id="@+id/idAgencyNameCV"
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="12dp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agency Name"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold">

            </androidx.appcompat.widget.AppCompatTextView>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:textSize="20sp"
        android:visibility="gone"
        android:id="@+id/teamNameTV"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/id_request_describe_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Describe"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/id_edittext_request_describe"
        android:layout_width="339dp"
        android:layout_height="122dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:background="@drawable/edittext"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/id_request_proof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="Proof"
        android:textSize="18dp"
        android:textColor="@color/black"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/id_request_proof_imageView"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/idAddProofCV"
        android:layout_width="57dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/sandal"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="90dp">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/idAgencyAddMember"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/addimg"
            tools:layout_editor_absoluteX="358dp"
            tools:layout_editor_absoluteY="640dp">

        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitButton"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundstyle"
        android:text="Submit"
        android:textColor="@color/white" >
    </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
