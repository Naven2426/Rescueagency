<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightsandal"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/lightsandal"
        android:layout_height="match_parent"
        tools:context=".main_menu_fragments.HomeFragment">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/idAdminUserProfileViewImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/idAdminUserDetailViewTV"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="39dp"
                    android:src="@mipmap/profile" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idAdminUserDetailViewBackButton"
                    android:src="@mipmap/backarrow"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="30dp">

                </androidx.appcompat.widget.AppCompatImageView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/idAdminUserDetailViewTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="27dp"
                    android:layout_toEndOf="@+id/idAdminUserDetailViewBackButton"
                    android:text="User details"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/idAdminUserDetailViewAccountInfo"
            android:layout_width="202dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Account Info"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAdminUserDetailViewReviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="48dp"
            android:text="Review"
            android:textColor="@color/hex"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAdminUserDetailViewNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.113"
            app:layout_constraintStart_toEndOf="@+id/id_profile_image"
            app:layout_constraintTop_toBottomOf="@+id/idAdminUserDetailViewAccountInfo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_image"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="36dp"
            android:src="@mipmap/profilename"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAdminUserDetailViewAccountInfo" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_mobile"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/mobile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_image" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAdminUserDetailViewMobileTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="9876543210"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintStart_toEndOf="@+id/id_profile_mobile"
            app:layout_constraintTop_toBottomOf="@+id/idAdminUserDetailViewNameTV" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_email"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_mobile" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAdminUserDetailViewEmailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="markexa123@gmail.com"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.567"
            app:layout_constraintStart_toEndOf="@+id/id_profile_email"
            app:layout_constraintTop_toBottomOf="@+id/idAdminUserDetailViewMobileTV" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_address"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/address"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_email" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/id_profile_address_id"
            android:layout_width="95dp"
            android:layout_height="32dp"
            android:layout_marginTop="40dp"
            android:text="Chennai"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toEndOf="@+id/id_profile_address"
            app:layout_constraintTop_toBottomOf="@+id/idAdminUserDetailViewEmailTV" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/id_profile_dob"
            android:layout_width="46dp"
            android:layout_height="53dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="15dp"
            android:src="@mipmap/dob"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_address" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAdminUserDetailViewDOBTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="12-12-1999"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toEndOf="@+id/id_profile_dob"
            app:layout_constraintTop_toBottomOf="@+id/id_profile_address_id" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/id_profile_logout"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:background="@drawable/roundstyle4"
            android:text="Remove User"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@+id/idAdminUserDetailViewDOBTV" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

