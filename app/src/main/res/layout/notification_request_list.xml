<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/lightsandal"
    android:layout_height="130dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/id_notifiaction_card_view"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:radius="16dp"
        app:cardBackgroundColor="@color/sandal"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_status"
            android:text="Status :"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="7dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:id="@+id/id_notification_status_view"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:radius="16dp"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardMaxElevation="4dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_notification_status_value_text"
                android:text="Solved"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_gravity="center"
                >

            </TextView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_alert_type"
            android:text="Alert Type :"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_alert_type_text"
            android:text="Medical"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="35dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_date"
            android:text="Date           :"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="15dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_date_text"
            android:text="12/12/2022"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="60dp">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_feedback"
            android:text="Feedback  :"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="15dp">
        </TextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:id="@+id/id_notification_feedback_view"
            android:paddingLeft="5dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="85dp"
            android:background="@drawable/border_line"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_notification_feedback_text"
            android:text="Send"
            android:textColor="@color/hex"
            android:textSize="17sp"
            android:layout_gravity="center">

        </TextView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>