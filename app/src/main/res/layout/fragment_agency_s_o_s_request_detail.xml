<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:orientation="vertical"
    android:background="@color/lightsandal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="70dp"
    tools:context=".MapsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightsandal">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/idAgencySOSReqDetailBackButIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="56dp"
            android:src="@mipmap/backarrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAgencySOSReqDetailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="51dp"
            android:text="SOS Request"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/idAgencySOSReqDetailBackButIV"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAgencySOSReqDetailNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="45dp"
            android:text="Name :"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqDetailBackButIV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAgencySOSReqDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:text="mark"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@+id/idAgencySOSReqDetailNameTV"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqDetailBackButIV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAgencySOSReqDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="11dp"
            android:text="Date :"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqDetailNameTV" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAgencySOSReqDetailDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="2020-01-01"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintStart_toEndOf="@+id/idAgencySOSReqDetailDate"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqDetailName">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/idAgencySOSReqDetailLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="11dp"
            android:text="Location :"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqDetailDate">

        </androidx.appcompat.widget.AppCompatTextView>

        <fragment
            android:id="@+id/idAgencySOSReqMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="355dp"
            android:layout_height="405dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqDetailLocation" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idAgencySOSReqCollaborateRequest"
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="34dp"
            android:background="@drawable/roundstyle"
            android:text="Request Collaborate"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqMap">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idAgencySOSReqAcceptRequest"
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/roundstyle"
            android:text="Accept Request"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqCollaborateRequest">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idAgencySOSReqRejectRequest"
            android:layout_width="339dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="14dp"
            android:background="@drawable/roundstyle4"
            android:text="Reject Request"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/idAgencySOSReqAcceptRequest">

        </androidx.appcompat.widget.AppCompatButton>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.core.widget.NestedScrollView>


