<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/lightsandal"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/id_agency_logo"
        android:layout_width="38dp"
        android:layout_height="35dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="41dp"
        android:src="@mipmap/agency_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_agency_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:text="A.C.Ambulence"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/id_agency_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/GfG_full_loo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="48dp"
        android:src="@mipmap/bell"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.appcompat.widget.AppCompatImageView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_agency_sos_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS Request"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_agency_name">

    </androidx.appcompat.widget.AppCompatTextView>

    <LinearLayout
        android:id="@+id/id_sos_req_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/id_agency_sos_req"
        tools:layout_editor_absoluteX="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/id_home_sos_req_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_name"
                android:text="Name :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                 />

            <TextView
                android:id="@+id/id_agency_sos_req_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Sent :"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_location"
                android:text="Location :"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                 />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_name_detail"
                android:text="ABC"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_date_detail"
                android:text="12/12/2022"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="85dp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="90dp"
                app:cardBackgroundColor="@color/hex"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textColor="@color/white"
                    android:layout_gravity="center">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_sos_req_info"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/info">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/id_home_sos_req_card2"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_name2"
                android:text="Name :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/id_agency_sos_req_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Sent :"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_location2"
                android:text="Location :"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_name_detail2"
                android:text="ABC"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_sos_req_date_detail2"
                android:text="12/12/2022"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="85dp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="90dp"
                app:cardBackgroundColor="@color/hex"
                app:cardCornerRadius="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View"
                    android:textColor="@color/white"
                    android:layout_gravity="center">

                </TextView>

            </androidx.cardview.widget.CardView>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_sos_req_info2"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/info">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/id_agency_sos_req_view_all"
            android:layout_width="186dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:layout_constraintTop_toBottomOf="@+id/id_sos_req_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View All"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/id_agency_emergency_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Request"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_sos_req_layout">

    </androidx.appcompat.widget.AppCompatTextView>


    <LinearLayout
        android:id="@+id/id_agency_emergency_req_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/id_agency_emergency_req"
        tools:layout_editor_absoluteX="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/id_home_emergency_req_card"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
