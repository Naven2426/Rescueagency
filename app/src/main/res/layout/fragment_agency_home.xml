                android:layout_marginTop="52dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_alert_type"
                android:text="Alert Type :"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_alert_type_detail"
                android:text="Medical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="90dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_name_detail"
                android:text="ABC"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_date_detail"
                android:text="12/12/2022"
                android:textColor="@color/black"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="85dp">

            </TextView>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_emergency_req_info"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/info">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/id_home_emergency_req_card2"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_name2"
                android:text="Name :"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/id_agency_emergency_req_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Sent :"
                android:textColor="@color/black"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_alert_type2"
                android:text="Alert Type :"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_alert_type_detail2"
                android:text="Medical"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="90dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_name_detail2"
                android:text="ABC"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="65dp"
                android:textColor="@color/black">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/id_agency_emergency_req_date_detail2"
                android:text="12/12/2022"
                android:textColor="@color/black"
                android:layout_marginTop="52dp"
                android:layout_marginLeft="85dp">

            </TextView>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_emergency_req_info2"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginLeft="235dp"
                android:layout_marginTop="25dp"
                android:src="@mipmap/info">

            </androidx.appcompat.widget.AppCompatImageView>


        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/id_agency_emergency_req_view_all"
            android:layout_width="186dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/sandal"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:cardMaxElevation="12dp"
            app:layout_constraintTop_toBottomOf="@+id/id_emergency_req_layout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="View All"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>



    </LinearLayout>





