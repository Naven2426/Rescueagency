<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="100dp"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/id_rescue_team_view_member_card"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:radius="16dp"
        app:cardBackgroundColor="@color/ahs"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent">


        <TextView
            android:id="@+id/id_rescue_team_view_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Name :"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/id_rescue_team_view_member_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="10dp"
            android:text="John"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>


        <TextView
            android:id="@+id/id_rescue_team_view_member_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:text="Experience :"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>

        <TextView
            android:id="@+id/id_rescue_team_view_member_experience_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:text="6 years"
            android:textColor="@color/black"
            android:textSize="17sp">

        </TextView>

        <ImageView
            android:id="@+id/id_rescue_team_view_member_image"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="125dp"
            android:src="@mipmap/agentprofile">

        </ImageView>

        <TextView
            android:id="@+id/id_rescue_team_view_member_position"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:layout_marginLeft="263dp"
            android:layout_marginTop="50dp"
            android:text="Position"
            android:textColor="@color/black"
            android:textSize="17sp">


        </TextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>