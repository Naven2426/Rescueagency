<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="130dp"
    android:layout_marginTop="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/idAdminAgencyListCV"
        android:layout_width="320dp"
        android:layout_height="130dp"
        android:radius="16dp"
        app:cardBackgroundColor="@color/ahs"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="4dp"
        app:layout_constraintStart_toStartOf="parent">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/idAdminAgencyProfile"
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/profilename">

        </androidx.appcompat.widget.AppCompatImageView>




        <TextView
            android:id="@+id/idAdminAgencyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="10dp"
            android:text="Apex Aid Alliance"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp">

        </TextView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/idAdminAgencyRatingCV"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="40dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idAdminAgencyRatingNum"
                    android:text="4.5"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:layout_marginLeft="4dp">

                </androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/idAdminAgencyRatingStar"
                    android:background="@mipmap/rating_star">

                </androidx.appcompat.widget.AppCompatImageView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idAdminAgencyTotalRating"
            android:text="10 Ratings"
            android:textColor="@color/black"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="45dp">

        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/idAdminAgencyLocationIV"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="75dp"
            android:background="@mipmap/address">

        </androidx.appcompat.widget.AppCompatImageView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idAdminAgencyAddressTV"
            android:text="Anna Nagar, Chennai"
            android:textColor="@color/black"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="150dp">

        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/idAdminAgencyType"
            android:layout_width="150dp"
            android:layout_height="23dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="115dp"
            android:background="@drawable/border_lineb"
            android:paddingLeft="5dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idAdminAgencyTypeName"
                android:text="Welfare Organisations"
                android:textColor="@color/black"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="101dp">

            </androidx.appcompat.widget.AppCompatTextView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>