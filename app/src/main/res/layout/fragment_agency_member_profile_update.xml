<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightsandal"
    tools:context=".LoginActivityFragments.SignUpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="270dp">


            <ImageView
                android:id="@+id/idAgencyUpdateProfileBackButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:src="@mipmap/backarrow"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/idAgencyUpdateProfileLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/agency_logo"
                app:layout_constraintStart_toEndOf="@+id/idAgencyUpdateProfileBackButton"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:id="@+id/id_agency_add_member_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="48dp"
                android:text="Apex Aid Alliance"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/idAgencyUpdateProfileLogo"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/id_agency_add_member_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Member Details"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.128"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/idAgencyUpdateProfileLogo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/id_agency_add_member_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@mipmap/profilename"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agency_add_member_details">

            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/showImagesVP"
                android:layout_width="70dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/id_agency_add_member_details"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/id_agency_add_member_card"
                android:layout_width="85dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/ahs"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_agency_add_member_profile_image">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit Photo"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold">

                </TextView>


            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>






        <TextView
            android:id="@+id/id_agent_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:text="@string/name"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileName"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:layout_marginTop="11dp"
            android:layout_gravity="center"
            android:background="@drawable/edittext"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/id_agent_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="11dp"
            android:text="@string/mobile"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileMobile"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="phone"
            android:background="@drawable/edittext"
            android:layout_marginTop="11dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingLeft="10dp"

            />

        <TextView
            android:id="@+id/id_agent_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="11dp"
            android:text="@string/email"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileEmail"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext"
            android:layout_marginTop="11dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/id_agent_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="30dp"
            android:text="@string/address"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileAddress"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/id_agent_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="11dp"
            android:text="@string/d_o_b"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileDob"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:paddingLeft="10dp"
            android:background="@drawable/edittext"
            android:inputType="date"
            android:focusable="false"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/id_agency_add_member_next_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="30dp"
            android:text="Role"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileRole"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:inputType="textPostalAddress"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:id="@+id/id_agency_add_member_next_yoe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="11dp"
            android:text="Year of Experience"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/idAgencyMemberUpdateProfileYoe"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:layout_marginTop="11dp"
            android:inputType="date"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/idAgencyMemberUpdateProfileButton"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:background="@drawable/roundstyle"
            android:text="Update Profile"
            android:layout_marginBottom="30dp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
