<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminAddAgencyFragment">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idAddAgencyIV"
                android:src="@mipmap/backarrow"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="56dp">

            </androidx.appcompat.widget.AppCompatImageView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idAddAgencyTitle"
                android:text="Edit Category"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="53dp" >
            </androidx.appcompat.widget.AppCompatTextView>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idAddImageTV"
            android:text="Add Image"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp">

        </androidx.appcompat.widget.AppCompatTextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="30dp">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/idAddAgencyRegisterButton"
                android:text="Choose File"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@drawable/roundstyle3">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/idAddAgencyDescriptionTV"
                android:text="No file chosen"
                android:textSize="20dp"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp">

            </androidx.appcompat.widget.AppCompatTextView>


        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idAddNameTV"
            android:text="Add Category Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatEditText
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/idAddNameET"
            android:background="@drawable/edittext"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="11dp"
            android:paddingLeft="10dp">
        </androidx.appcompat.widget.AppCompatEditText>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:id="@+id/idAddAgencyNextButton"
            android:text="Save Category"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/roundstyle"
            android:layout_gravity="center"
            android:layout_marginTop="160dp">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>